<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SerapisPatient.Views.Dummy"
             xmlns:Scroll="clr-namespace:SerapisPatient.Controls"
             xmlns:vm="clr-namespace:SerapisPatient.ViewModels.AppointmentViewModels"
             >
    <Scroll:TLScrollView Orientation="Horizontal"
                         ItemsSource="{Binding Practices}"
                         SelectedCommand="{Binding ItemSelected}"
                         HeightRequest="100">

        <Scroll:TLScrollView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Padding="5">
                        <Label FontSize="Large" Text="{Binding PracticeName}" />
                        <Label FontSize="Large" Text="{Binding Distance}" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </Scroll:TLScrollView.ItemTemplate>
    </Scroll:TLScrollView>


</ContentPage>