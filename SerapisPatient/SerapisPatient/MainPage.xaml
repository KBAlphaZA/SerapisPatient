<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SerapisPatient"
             x:Class="SerapisPatient.MainPage"
             BackgroundColor="#e7e7e7"
            NavigationPage.HasNavigationBar="False"
             >


    <ContentPage.Resources>
        <Style TargetType="Entry" x:Key="LoginEntryLabels">
            <Setter Property="FontAttributes" Value="{StaticResource UbuntuRegular}"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="PlaceholderColor" Value="Gray"/>
        </Style>
    </ContentPage.Resources>
    
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1.5*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!--#region The Logo goes here-->
            <Grid Grid.Row="0">

                <Grid.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="Android, WinPhone, Windows" Value="0,8,0,0"/>
                        <On Platform="iOS" Value="0,12,0,0"/>
                    </OnPlatform>
                </Grid.Margin>
                
               <!--The Logo here 150x150-->
            </Grid>
            <!--#endregion-->


            <!--#region The Username/Email Entry-->
            <Grid Grid.Row="1">
                <Grid.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="Android, WinPhone, Windows" Value="12,0,0,0"/>
                        <On Platform="iOS" Value="14,0,0,0"/>
                    </OnPlatform>
                </Grid.Margin>
                <Label 
                    Text="Sign in" 
                    FontSize="20" 
                    HorizontalOptions="Start" 
                    VerticalOptions="Center"
                    TextColor="{StaticResource SeconderyColour}"
                    FontAttributes="Bold"
                    />
            </Grid>
            <!--#endregion-->

            <!--#region the Password Entry field-->
            <Grid Grid.Row="2" >

                <Grid.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="Android, WinPhone, Windows" Value="12,0,0,0"/>
                        <On Platform="iOS" Value="14,0,0,0"/>
                    </OnPlatform>
                </Grid.Margin>

                <Entry 
                    HorizontalOptions="Fill" 
                    VerticalOptions="End" 
                    Placeholder="USERNAME"
                    Style="{StaticResource LoginEntryLabels}"
                    Text="{Binding Email, Mode=TwoWay}"
                    />
            </Grid>
            <!--#endregion-->

            <!--#region The small gap-->
            <Grid Grid.Row="3" >

                <Grid.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="Android, WinPhone, Windows" Value="10,0,0,0"/>
                        <On Platform="iOS" Value="14,0,0,0"/>
                    </OnPlatform>
                </Grid.Margin>

                <Entry 
                    Placeholder="PASSWORD" 
                    VerticalOptions="End" 
                    HorizontalOptions="Fill"
                    Style="{StaticResource LoginEntryLabels}"
                    Text="{Binding Password, Mode=TwoWay}"
                    />
            </Grid>
            <!--#endregion-->

            <!--#region the Login button-->
            <Grid Grid.Row="4" >
                <!--Empy space-->
            </Grid>
            <!--#endregion-->

            <!--#region Login button-->
            <Grid Grid.Row="5" >

                <Grid.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="Android, WinPhone, Windows" Value="12,0,12,0"/>
                        <On Platform="iOS" Value="15,0,15,0"/>
                    </OnPlatform>
                </Grid.Margin>

                <Button Text="Login" 
                        CornerRadius="20" 
                        TextColor="White"
                        BackgroundColor="{StaticResource ButtonColour}"
                        Command="{Binding LoginOnClick}"
                        />
            </Grid>
            <!--#endregion-->


            <!--#region sign in lable:with other services-->
            <Grid Grid.Row="6" >
                <Label Text="Or sign in with:" 
                       HorizontalOptions="Center" 
                       VerticalOptions="Center"
                       FontSize="Medium"
                       />
            </Grid>
            <!--#endregion-->
            
            <!--#region The Services avaliable-->
            <Grid Grid.Row="7" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="5*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--Google-->
                    <Grid Grid.Column="0">
                        <Image Source="GoogleSignIn.png">
                            <Image.WidthRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="Android, UWP" Value="45"/>
                                    <On Platform="iOS" Value="45"/>
                                </OnPlatform>
                            </Image.WidthRequest>
                            <Image.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="Android, UWP" Value="45"/>
                                    <On Platform="iOS" Value="45"/>
                                </OnPlatform>
                            </Image.HeightRequest>
                        </Image>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding .}"/>
                        </Grid.GestureRecognizers>
                    
                    </Grid>
                    
                    <!--facebook-->
                    <Grid Grid.Column="1">
                        <Image Source="FacebookSignIn.png">
                            <Image.WidthRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="Android, UWP" Value="45"/>
                                    <On Platform="iOS" Value="45"/>
                                </OnPlatform>
                            </Image.WidthRequest>
                            <Image.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="Android, UWP" Value="45"/>
                                    <On Platform="iOS" Value="45"/>
                                </OnPlatform>
                            </Image.HeightRequest>
                        </Image>

                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding .}"/>
                        </Grid.GestureRecognizers>
                    
                    
                    </Grid>
                    
                    <!--Microsoft-->
                    <Grid Grid.Column="2">
                        <Image Source="MicrosoftSignIn.png">
                            <Image.WidthRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="Android, UWP" Value="45"/>
                                    <On Platform="iOS" Value="45"/>
                                </OnPlatform>
                            </Image.WidthRequest>
                            <Image.HeightRequest>
                                <OnPlatform x:TypeArguments="x:Double">
                                    <On Platform="Android, UWP" Value="45"/>
                                    <On Platform="iOS" Value="45"/>
                                </OnPlatform>
                            </Image.HeightRequest>
                        </Image>


                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding .}"/>
                        </Grid.GestureRecognizers>
                        
                    </Grid>

                </Grid>
            </Grid>
            <!--#endregion-->  
            
            <!--#region The Other Labels for forgot passwords-->
            <Grid Grid.Row="8">

                <Grid.Margin>
                    <OnPlatform x:TypeArguments="Thickness">
                        <On Platform="Android, WinPhone, Windows" Value="0,0,0,5"/>
                        <On Platform="iOS" Value="0,0,0,10"/>
                    </OnPlatform>
                </Grid.Margin>

                <Label Text="Forgot Password" HorizontalOptions="Center" FontSize="Medium">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding RestThePassword}"/>
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
            <!--#endregion-->
            
        </Grid>
    </ContentPage.Content>
</ContentPage>
